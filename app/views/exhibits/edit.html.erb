<%= exhibit_title(@exhibit) %>

<div class="row">
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Showcases</h3>
      </div>

      <table class="table table-hover">
        <% @exhibit.showcases.each do |showcase| %>
          <tr>
            <td>
              <%= showcase.title %>
            </td>
            <td>
              <a class="remove_curator pull-right" curator_id="<%= showcase.id %>">x</button>
            </td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Rename Exhibit</h3>
      </div>
      <div class="panel-body">
        <%= simple_form_for @exhibit, :html => { :class => 'form-inline' } do |f| %>
          <%= display_errors(@exhibit) %>
          <%= f.input :title, wrapper: :inline_form, as: :string %>
          <button name="commit" type="submit" class="btn btn-default"><span class="text-primary">Rename</span></button>
        <% end %>
      </div>
    </div>


    <%= Waggle::DeleteSection.new(@exhibit).display do | ds |
      ds.message = "Procede with caution. This will also remove all showcases."
    end
    %>

  </div>
  <div class="col-md-3">
    <%= exhibit_nav(@exhibit, :settings) %>
  </div>
</div>
